<div class="route-branch-stop-name-icons">
  <div class="route-branch-stop-name">
    <%= break_text_at_slash(@stop.name) %>
  </div>
  <div class="route-branch-stop-icons">
    <%= Enum.map(@stop.stop_features, &Site.StopView.stop_feature_icon(&1))%>
  </div>
</div>
<%= if @stop.zone do %>
  <div>
    <div class="commuter-rail-zone route-branch-stop-zone">
      <%= unless @route.type == 2 do %>Commuter Rail<% end %>
      Zone <%= @stop.zone %>
    </div>
  </div>
<% end %>
<div class="route-branch-stop-links">
  <%= link class: "route-branch-stop-link stop-info-link", to: stop_path(@conn, :show, @stop.id) do %>
    <%= fa "caret-right" %> Stop Info
  <% end %>
  <%=
    direction_id = schedule_link_direction_id(@stop, @bubbles, @direction_id)
    trip_path = trip_view_path(@conn, :show, @route.id, origin: @stop.id, direction_id: direction_id)
    link class: "route-branch-stop-link schedule-link", to: trip_path do %>
      <%= fa "caret-right" %> Schedules from here
  <% end %>
</div>
